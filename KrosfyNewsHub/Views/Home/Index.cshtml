@{
    ViewBag.Title = "Home Page";
}


  <!-- ======= Post Grid Section ======= -->
  <section id="posts" class="posts">
      <div class="container" data-aos="fade-up">
          <div class="row g-5">
              <!-- ======= Parte izquierda ======= -->
              
              <div class="col-lg-10">
                  <!-- Categoria -->
                  @foreach ((List<KrosfyNewsHub.Models.Article> articulos, string nombreCategoria) categoria in ViewBag.News)
                    {
                        <div class="row">
                            <div class="col-lg-12 section-header d-flex justify-content-between align-items-center mb-5">
                                <h2>@categoria.nombreCategoria</h2>
                                <div><a href="category.html" class="more">See All @categoria.nombreCategoria</a></div> <!-- Terminar-->
                            </div>
                            <div class="col-lg-5">
                                <div class="post-entry-1 lg">
                                    <a href="/SinglePost"><img src="@categoria.articulos[0].urlToImage" alt="" class="img-fluid"></a>
                                    <div class="post-meta"><span>@categoria.articulos[0].author</span> <span class="mx-1">&bullet;</span>  <span>@categoria.articulos[0].publishedAt.ToString("dd-MM-yyyy")</span> <span class="mx-1">&bullet;</span><span class="date">@categoria.articulos[0].source.name</span> </div>
                                    <h2><a href="SinglePost">@categoria.articulos[0].title</a></h2>
                                    <p class="mb-4 d-block">@categoria.articulos[0].description</p>

                                </div>

                            </div>

                            <div class="col-lg-7 border-start custom-border">
                                <div class="row g-5">
                                    @foreach (KrosfyNewsHub.Models.Article noticia in categoria.articulos)
                                      {
                                        if (noticia.urlToImage == categoria.articulos[0].urlToImage) { continue; }
                                        <div class="col-lg-6 ">
                                            <div class="post-entry-1">
                                                <a href="SinglePost"><img src="@noticia.urlToImage" alt="" class="img-fluid"></a>
                                                <div class="post-meta"><span>@noticia.author</span> <span class="mx-1">&bullet;</span>  <span>@noticia.publishedAt.ToString("dd-MM-yyyy")</span> <span class="mx-1">&bullet;</span><span class="date">@noticia.source.name</span> </div>
                                                <h2><a href="SinglePost">@noticia.title</a></h2>
                                            </div>
                                        </div>
                                        }
                                </div>
                            </div>
                        </div>
                    }



              </div>
              <!-- ======= Parte derecha ======= Trending Section -->
              <div class="col-lg-2">

                  <div class="trending">
                      <h3>Trending</h3>
                      <ul class="trending-post">
                          <li>
                              <a href="SinglePost">
                                  <span class="number">1</span>
                                  <h3>The Best Homemade Masks for Face (keep the Pimples Away)</h3>
                                  <span class="author">Jane Cooper</span>
                              </a>
                          </li>
                          <li>
                              <a href="SinglePost">
                                  <span class="number">2</span>
                                  <h3>17 Pictures of Medium Length Hair in Layers That Will Inspire Your New Haircut</h3>
                                  <span class="author">Wade Warren</span>
                              </a>
                          </li>
                          <li>
                              <a href="SinglePost">
                                  <span class="number">3</span>
                                  <h3>13 Amazing Poems from Shel Silverstein with Valuable Life Lessons</h3>
                                  <span class="author">Esther Howard</span>
                              </a>
                          </li>
                          <li>
                              <a href="single-post.html">
                                  <span class="number">4</span>
                                  <h3>9 Half-up/half-down Hairstyles for Long and Medium Hair</h3>
                                  <span class="author">Cameron Williamson</span>
                              </a>
                          </li>
                          <li>
                              <a href="single-post.html">
                                  <span class="number">5</span>
                                  <h3>Life Insurance And Pregnancy: A Working Mom’s Guide</h3>
                                  <span class="author">Jenny Wilson</span>
                              </a>
                          </li>
                      </ul>
                  </div>

              </div> <!-- End Trending Section -->



          </div> <!-- End .row -->
      </div>
  </section>

