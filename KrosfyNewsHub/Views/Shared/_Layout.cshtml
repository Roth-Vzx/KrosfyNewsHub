@{
    var logoURL = Url.Content("~/assets/img/favicon.png");
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Krosfy News</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!--  favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500&family=Inter:wght@400;500&family=Playfair+Display:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")

    <!-- =======================================================
    * Template Name: ZenBlog
    * Updated: May 30 2023 with Bootstrap v5.3.0
    * Template URL: https://bootstrapmade.com/zenblog-bootstrap-blog-template/
    * Author: BootstrapMade.com
    * License: https:///bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/assets/img/logo-kn.png" alt="logo" width="90">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-center" id="navbarTogglerDemo01">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">@Html.ActionLink(Resources.Resources.Menu_HomeBtn, "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="CryptoDropdown" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Crypto @* <i class="bi bi-currency-bitcoin"></i>*@
                            </a>
                            <div class="dropdown-menu bg-light border-bottom border-bottom" aria-labelledby="CryptoDropdown">
                                @Html.ActionLink(Resources.Resources.Menu_AllText, "Index", "Home", new { area = "", categoriaID = 1 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Bitcoin", "Category", "Home", new { area = "", categoriaID = 1, SubCategoriaID = 1 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Ethereum", "Category", "Home", new { area = "", categoriaID = 1, SubCategoriaID = 2 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Tether", "Category", "Home", new { area = "", categoriaID = 1, SubCategoriaID = 3 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Cardano", "Category", "Home", new { area = "", categoriaID = 1, SubCategoriaID = 4 }, new { @class = "nav-link dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="TechnologyDropdown" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Technology @* <i class="bi bi-currency-bitcoin"></i>*@
                            </a>
                            <div class="dropdown-menu bg-light border-bottom border-bottom" aria-labelledby="TechnologyDropdown">
                                @Html.ActionLink(Resources.Resources.Menu_AllText, "Index", "Home", new { area = "", categoriaID = 2 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Inteligencia Artificial", "Category", "Home", new { area = "", categoriaID = 2, SubCategoriaID = 5 }, new { @class = "nav-link dropdown-item" })
                                @Html.ActionLink("Gaming News", "Category", "Home", new { area = "", categoriaID = 2, SubCategoriaID = 6 }, new { @class = "nav-link dropdown-item" })

                            </div>
                        </li>
                    </ul>


                    <div style="min-width:500px;">
                        <form class="d-flex" role="search" style="float:right; width:100%;">
                            <input class="form-control me-2" type="search" placeholder="@Resources.Resources.Menu_SearchText" aria-label="Search">
                            <a class="btn btn-outline-dark" href="@Url.Action("SearchResult","Home", new { area = "", type = "cardano" })"><i class="bi bi-search"></i></a>
                        </form>
                    </div>
                    @* Submenu de lenguaje.*@
                    @Html.Partial("_LanguagePartial")

                </div>
            </div>
        </nav>
    </header>


    <div class="container-noborder body-content">

        @RenderBody()

        <footer id="footer" class="footer">
            <div class="footer-legal">
                <div class="container">

                    <div class="row justify-content-between">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            <div class="copyright">
                                © Copyright <strong><span>Krosfy</span></strong>. All Rights Not Reserved
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="social-links mb-3 mb-lg-0 text-center text-md-end">
                                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </footer>

        <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/jsTemplate")
    @RenderSection("scripts", required: false)

</body>
</html>
