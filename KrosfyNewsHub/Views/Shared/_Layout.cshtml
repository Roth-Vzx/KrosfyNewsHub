                                        <a class="nav-link dropdown-item" href="@Url.Action("ChangeLanguage", "Language",new { lang = "es" })">
                                            <img width="20" height="20" src="https://img.icons8.com/color/48/spain-circular.png" alt="spain-circular" /> @*@Resources.Resources.LangES*@
                                        </a>
                                        <a class="nav-link dropdown-item" href="@Url.Action("ChangeLanguage", "Language",new { lang = "it" })">
                                            <img width="20" height="20" src="https://img.icons8.com/fluency/48/italy-circular.png" alt="italy-circular" /> @*@Resources.Resources.LangIT*@
                                        </a>
                                        <a class="nav-link dropdown-item" href="@Url.Action("ChangeLanguage", "Language",new { lang = "en" })">
                                            <img width="20" height="20" src="https://img.icons8.com/fluency/48/usa-circular.png" alt="usa-circular" style="display:inline-flex" /> @*@Resources.Resources.LangEN*@
                                        </a>
                                    </div>
                            </li>
